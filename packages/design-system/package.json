{
    "name": "@schimufa/design-system",
    "version": "2.0.4",
    "description": "Configurable design system with versioned components",
    "main": "dist/design-system.umd.js",
    "module": "dist/design-system.es.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/schimufa/design-system.git"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "scripts": {
        "dev": "storybook dev -p 6006",
        "build": "tsc && vite build",
        "build-storybook": "storybook build",
        "test": "vitest",
        "test:visual": "playwright test",
        "lint": "eslint . --ext .ts,.tsx",
        "typecheck": "tsc --noEmit",
        "validate-theme": "ts-node scripts/validate-theme.ts",
        "validate-design": "ts-node scripts/validate-design.ts",
        "docs": "typedoc --out docs src",
        "release": "pnpm build && changeset publish",
        "prepare-release": "changeset version && pnpm install"
    },
    "peerDependencies": {
        "@mui/material": "^5.0.0",
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "devDependencies": {
        "@changesets/cli": "^2.0.0",
        "@mui/icons-material": "^5.18.0",
        "@storybook/react": "^7.6.10",
        "@storybook/react-vite": "^7.6.10",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.0.0",
        "@types/react": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react": "^3.1.0",
        "colord": "^2.9.3",
        "eslint": "^8.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.0.0",
        "vite": "^4.1.0",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "^1.0.0"
    },
    "keywords": [
        "design-system",
        "react",
        "components",
        "ui",
        "material-ui"
    ],
    "author": "Your Organization",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/schimufa/design-system/issues"
    },
    "homepage": "https://schimufa.github.io/design-system"
}