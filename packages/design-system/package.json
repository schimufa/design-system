{
    "name": "@schimufa/design-system",
    "version": "1.0.0",
    "description": "Configurable design system with versioned components",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/your-org/design-system.git"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "scripts": {
        "dev": "storybook dev -p 6006",
        "build": "tsc && vite build",
        "build-storybook": "storybook build",
        "test": "vitest",
        "test:visual": "playwright test",
        "lint": "eslint . --ext .ts,.tsx",
        "release": "pnpm build && changeset publish",
        "prepare-release": "changeset version && pnpm install",
        "docs": "typedoc --out docs src"
    },
    "peerDependencies": {
        "@mui/material": "^5.0.0",
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "devDependencies": {
        "@changesets/cli": "^2.0.0",
        "@storybook/react": "^7.6.10",
        "@storybook/react-vite": "^7.6.10",
        "@types/react": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react": "^4.0.0",
        "eslint": "^8.0.0",
        "typescript": "^5.0.0",
        "vite": "^5.0.0",
        "vitest": "^1.0.0"
    },
    "keywords": [
        "design-system",
        "react",
        "components",
        "ui",
        "material-ui"
    ],
    "author": "Your Organization",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/your-org/design-system/issues"
    },
    "homepage": "https://your-org.github.io/design-system"
}