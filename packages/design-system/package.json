{
    "name": "@schimufa/design-system",
    "version": "2.0.4",
    "description": "Configurable design system with versioned components",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "sideEffects": false,
    "license": "MIT",
    "files": [
        "dist/**"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/schimufa/design-system.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
        "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
        "lint": "eslint \"src/**/*.ts*\"",
        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "build-storybook": "storybook build",
        "storybook": "storybook dev -p 6006",
        "validate-theme": "ts-node scripts/validate-theme.ts",
        "docs": "typedoc --out docs src/index.tsx"
    },
    "peerDependencies": {
        "@mui/material": "^5.0.0",
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "devDependencies": {
        "@storybook/addon-essentials": "^7.6.20",
        "@storybook/addon-interactions": "^7.6.20",
        "@storybook/addon-links": "^7.6.20",
        "@storybook/blocks": "^7.6.20",
        "@storybook/react": "^7.6.20",
        "@storybook/react-vite": "^7.6.20",
        "@storybook/testing-library": "^0.2.2",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.1",
        "@types/jest": "^29.5.12",
        "@types/react": "^18.2.64",
        "@types/react-dom": "^18.2.21",
        "@vitejs/plugin-react": "^4.2.1",
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "storybook": "^7.6.20",
        "ts-jest": "^29.1.2",
        "tsup": "^8.0.2",
        "typedoc": "^0.25.9",
        "typescript": "^5.3.3",
        "vite": "^4.5.2"
    },
    "keywords": [
        "design-system",
        "react",
        "components",
        "ui",
        "material-ui"
    ],
    "author": "Your Organization",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/schimufa/design-system/issues"
    },
    "homepage": "https://schimufa.github.io/design-system"
}