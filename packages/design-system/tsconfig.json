{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "composite": true,
        "noEmit": false,
        "emitDeclarationOnly": false,
        "isolatedModules": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": false,
        "jsx": "react-jsx",
        "types": ["node", "jest", "@testing-library/jest-dom"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*",
        "scripts/**/*",
        ".storybook/**/*",
        "**/*.stories.tsx",
        "**/*.test.tsx",
        "**/*.spec.tsx"
    ],
    "exclude": ["node_modules", "dist"]
} 