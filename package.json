{
    "name": "ab-inbev-frontend",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "prepare": "husky install",
        "changeset": "changeset",
        "version-packages": "changeset version",
        "release": "turbo run build --filter=./packages/* && changeset publish",
        "validate-design": "node -r ts-node/register packages/design-system/scripts/design-validator.ts",
        "generate-release-notes": "node -r ts-node/register scripts/generate-release-notes.ts",
        "preversion-packages": "pnpm validate-design",
        "postversion-packages": "pnpm generate-release-notes",
        "clean": "turbo run clean && rm -rf node_modules",
        "build:storybook": "turbo run build-storybook"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.5",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": "^8.0.3",
        "prettier": "^3.1.1",
        "turbo": "^1.11.3",
        "typescript": "^5.3.3",
        "ts-node": "^10.9.2",
        "chalk": "^5.3.0"
    }
}