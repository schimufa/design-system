#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running development pre-commit checks..."
echo "This runs essential checks but allows work-in-progress commits."
echo ""

# Format code first
echo "ğŸ“ Formatting code..."
npm run format

# Run basic linting (but don't fail on warnings)
echo "ğŸ§¹ Running basic linter..."
pnpm lint || echo "âš ï¸  Linting issues found - please address when possible"

# Run type checking for design system only
echo "ğŸ”· Running type check..."
cd packages/design-system
if ! pnpm typecheck; then
    echo ""
    echo "âš ï¸  TypeScript errors in design system"
    echo "Please fix when possible, but allowing commit for WIP"
    echo ""
fi

cd ../..

# Run a quick validation check (but don't fail)
echo "ğŸ¨ Quick design system check..."
cd packages/design-system
pnpm validate-contribution || echo "âš ï¸  Some validation checks failed - please address before final PR"
cd ../..

echo ""
echo "âœ… Development pre-commit checks completed!"
echo "ğŸ’¡ Run 'pnpm pre-commit:strict' before creating PR"
echo "ğŸš€ Commit allowed!"
echo ""
